{
  "manifest_version": 2,
  "name": "Yabumi for Chrome",
  "short_name": "Yabumi",
  "version": "1.0.1",
  "minimum_chrome_version": "35",
  "author": "Webnium",
  "default_locale": "en",

  "description": "__MSG_extDescription__",
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },

  "browser_action": {
    "default_icon": {
      "19": "img/action_icon19.png",
      "38": "img/action_icon38.png"
    },
    "default_title": "__MSG_browserActionTitle__"
  },

  "background": {
    "scripts": ["context-menus.js", "manipulate-tab.js", "defaultOptions.js", "main.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": ["content.js"]
    }
  ],

  "options_page": "options.html",

  "permissions": [
    "tabs",
    "clipboardRead",
    "activeTab",
    "contextMenus",
    "storage",
    "notifications",
    "<all_urls>"
  ]
}